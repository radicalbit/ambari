<configuration>

  <property require-input="true">
    <name>cassandra_log_dir</name>
    <display-name>Log Directory</display-name>
    <description>The directory where Cassandra will write log files.</description>
    <value>/var/log/cassandra</value>
  </property>

  <property require-input="true">
    <name>cassandra_pid_dir</name>
    <display-name>Pid Directory</display-name>
    <description>Directory containing process ID file.</description>
    <value>/var/run/cassandra</value>
  </property>

  <property require-input="true">
    <name>max_heap_size</name>
    <display-name>Max Heap Size</display-name>
    <description>Total amount of memory dedicated to the Java heap.</description>
    <value>8G</value>
  </property>

  <property require-input="true">
    <name>heap_new_size</name>
    <display-name>Heap Newsize</display-name>
    <description>Size of the young generation.</description>
    <value>2G</value>
  </property>

  <property require-input="true">
    <name>cassandra_user</name>
    <value>cassandra</value>
    <property-type>USER</property-type>
    <description>Cassandra user</description>
  </property>

</configuration>
