<!--TODO: add descriptions and labels to all properties-->
<configuration>

  <property>
    <name>elastic_user</name>
    <value>elasticsearch</value>
    <property-type>USER</property-type>
    <label></label>
    <description>Elasticsearch service user</description>
  </property>

  <!--TODO: remove and use stack group-->
  <property>
    <name>user_group</name>
    <value>elasticsearch</value>
    <label></label>
    <description></description>
  </property>

  <property>
    <name>elastic_log_dir</name>
    <value>/var/log/elasticsearch</value>
    <label></label>
    <description>Log directory</description>
  </property>

  <property>
    <name>elastic_pid_dir</name>
    <value>/var/run/elasticsearch</value>
    <label></label>
    <description>PID directory</description>
  </property>

  <!--TODO: add to params-->
  <property>
    <name>elastic_data_dir</name>
    <value>/var/lib/elasticsearch/data</value>
    <label></label>
    <description>Data directory</description>
  </property>

  <!--TODO: add to params-->
  <property>
    <name>elastic_plugins_dir</name>
    <value>/var/lib/elasticsearch/plugins</value>
    <label></label>
    <description>Plugins directory</description>
  </property>

  <!--es.insecure.allow.root-->
  <property>
    <name>es_insicure_allow_root</name>
    <value>false</value>
    <label>ES insicure allow ROOT</label>
    <description>Allow to run ES as root</description>
  </property>

  <!-- elasticsearch-env.sh -->
  <property>
    <name>content</name>
    <value>Elasticsearch env</value>
    <description>This is the jinja template for elastic-env.sh file</description>
    <value>
#!/bin/bash

# Set ELASTICSEARCH specific environment variables here.

# The java implementation to use.
export JAVA_HOME={{java64_home}}
export PATH=$PATH:$JAVA_HOME/bin
    </value>
  </property>
</configuration>
