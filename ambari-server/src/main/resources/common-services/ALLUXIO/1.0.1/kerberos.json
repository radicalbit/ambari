{
  "services": [
    {
      "name": "ALLUXIO",
      "identities": [
        {
          "name": "/smokeuser"
        }
      ],
      "configurations": [
        {
          "core-site": {
            "hadoop.proxyuser.${alluxio-env/alluxio_user}.groups": "*",
            "hadoop.proxyuser.${alluxio-env/alluxio_user}.hosts": "*"
          }
        }
      ],
      "components": [
        {
          "name": "ALLUXIO_MASTER",
          "identities": [
            {
              "name": "alluxio_master",
              "principal": {
                "value": "alluxio-master/_HOST@${realm}",
                "type" : "service",
                "configuration": "alluxio-env/alluxio_master_principal_name",
                "local_username" : "${alluxio-env/alluxio_user}"
              },
              "keytab": {
                "file": "${keytab_dir}/alluxio-master.service.keytab",
                "owner": {
                  "name": "${alluxio-env/alluxio_user}",
                  "access": "r"
                },
                "group": {
                  "name": "${cluster-env/user_group}",
                  "access": ""
                },
                "configuration": "alluxio-env/alluxio_master_keytab"
              }
            }
          ]
        },
        {
          "name": "ALLUXIO_SLAVE",
          "identities": [
            {
              "name": "alluxio_worker",
              "principal": {
                "value": "alluxio-worker/_HOST@${realm}",
                "type" : "service",
                "configuration": "alluxio-env/alluxio_worker_principal_name",
                "local_username" : "${alluxio-env/alluxio_user}"
              },
              "keytab": {
                "file": "${keytab_dir}/alluxio-worker.service.keytab",
                "owner": {
                  "name": "${alluxio-env/alluxio_user}",
                  "access": "r"
                },
                "group": {
                  "name": "${cluster-env/user_group}",
                  "access": ""
                },
                "configuration": "alluxio-env/alluxio_worker_keytab"
              }
            }
          ]
        }
      ]
    }
  ]
}