<configuration supports_final="true">

  <property>
   <name>alluxio.log.dir</name>
   <description>Alluxio Log Directory</description>
   <value>/var/log/alluxio/</value>
    <value-attributes>
      <type>directory</type>
      <overridable>false</overridable>
      <editable-only-at-install>true</editable-only-at-install>
    </value-attributes>
  </property>

  <property>
    <name>alluxio.pid.dir</name>
    <description>Alluxio pid Directory</description>
    <value>/var/run/alluxio</value>
    <value-attributes>
      <type>directory</type>
      <overridable>false</overridable>
      <editable-only-at-install>true</editable-only-at-install>
    </value-attributes>
  </property>

  <property>
    <name>alluxio_user</name>
    <display-name>Alluxio User</display-name>
    <value>alluxio</value>
    <property-type>USER</property-type>
    <description>Alluxio Service Account User</description>
    <value-attributes>
      <editable-only-at-install>true</editable-only-at-install>
    </value-attributes>
  </property>

  <property>
    <name>root_user</name>
    <display-name>Root User</display-name>
    <value>root</value>
    <property-type>USER</property-type>
    <description>Root User</description>
  </property>

  <property>
    <name>alluxio_version</name>
    <display-name>Alluxio Version</display-name>
    <value>1.2.0</value>
    <description>Alluxio Version</description>
    <value-attributes>
      <visible>false</visible>
    </value-attributes>
  </property>

</configuration>
