# Default configuration properties for Alluxio
# All the properties except Build properties are override-able via alluxio-site.properties file.

# Build properties
alluxio.version=${project.version}

# Common properties
alluxio.logs.dir={{ log_dir }}
alluxio.underfs.address={{ underfs_addr }}
alluxio.underfs.hdfs.configuration={{ hadoop_core_site }}
alluxio.zookeeper.enabled=true
alluxio.zookeeper.address={{ zookeeper_hosts }}

# Master properties
alluxio.master.hostname={{alluxio_master}}
alluxio.master.journal.folder={{ journal_addr }}
alluxio.master.web.port={{ master_web_port }}

# Worker properties
alluxio.worker.memory.size={{ worker_mem }}
{% if is_tiredstore_level2_enabled %}
alluxio.worker.tieredstore.levels=3
{% else %}
alluxio.worker.tieredstore.levels=2
{% endif %}
alluxio.worker.tieredstore.levels={{ tieredstore_levels }}
alluxio.worker.tieredstore.level0.alias={{ tieredstore_level0_alias }}
alluxio.worker.tieredstore.level0.dirs.path={{ tieredstore_level0_dirs_path }}
alluxio.worker.tieredstore.level0.dirs.quota={{ tieredstore_level0_dirs_quota }}
alluxio.worker.tieredstore.level0.reserved.ratio={{ tieredstore_level0_reserved_ratio }}
alluxio.worker.tieredstore.level1.alias={{ tieredstore_level1_alias }}
alluxio.worker.tieredstore.level1.dirs.path={{ tieredstore_level1_dirs_path }}
alluxio.worker.tieredstore.level1.dirs.quota={{ tieredstore_level1_dirs_quota }}
alluxio.worker.tieredstore.level1.reserved.ratio={{ tieredstore_level1_reserved_ratio }}
{% if is_tiredstore_level2_enabled %}
alluxio.worker.tieredstore.level2.alias={{ tieredstore_level2_alias }}
alluxio.worker.tieredstore.level2.dirs.path={{ tieredstore_level2_dirs_path }}
alluxio.worker.tieredstore.level2.dirs.quota={{ tieredstore_level2_dirs_quota }}
alluxio.worker.tieredstore.level2.reserved.ratio={{ tieredstore_level2_reserved_ratio }}
{% endif %}
alluxio.worker.web.port={{ worker_web_port }}

# User properties
alluxio.user.block.size.bytes.default=128MB
alluxio.user.file.readtype.default={{ readtype }}
alluxio.user.file.writetype.default={{ writetype }}

{% if security_enabled %}
# Kerberos properties
{% if is_current_node_master %}
alluxio.master.keytab.file={{ master_keytab }}
{% endif %}
alluxio.master.principal={{ master_principal }}
alluxio.worker.keytab.file={{ worker_keytab }}
alluxio.worker.principal={{ worker_principal }}
{% endif %}