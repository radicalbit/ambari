#==============================================================================
# Common
#==============================================================================

jobmanager.rpc.address: {{ jobmanager_rpc_address }}
jobmanager.rpc.port: {{ jobmanager_rpc_port }}
high-availability.jobmanager.port: {{ jobmanager_rpc_port_ha }}
jobmanager.heap.mb: {{ jobmanager_heap_mb }}
taskmanager.heap.mb: {{ taskmanager_heap_mb }}
taskmanager.numberOfTaskSlots: {{ taskmanager_numberOfTaskSlots }}
parallelism.default: {{ parallelism_default }}
taskmanager.memory.preallocate: false

fs.hdfs.hadoopconf: {{ fs_hdfs_hadoopconf }}
env.log.dir: {{ flink_log_dir }}
env.pid.dir: {{ flink_pid_dir }}

#==============================================================================
# Advanced
#==============================================================================

taskmanager.memory.size: {{ taskmanager_memory_size }}
taskmanager.memory.fraction: {{ taskmanager_memory_fraction }}
taskmanager.memory.segment-size: {{ taskmanager_memory_segment_size }}
taskmanager.memory.preallocate: {{ taskmanager_memory_preallocate }}
taskmanager.tmp.dirs: {{ taskmanager_tmp_dirs }}
state.backend: {{ state_backend }}
state.backend.fs.checkpointdir: {{ state_backend_fs_checkpointdir }}
state.backend.fs.memory-threshold: {{ state_backend_memory_threshold }}
blob.storage.directory: {{ blob_storage_directory }}
blob.server.port: {{ blob_server_port }}
fs.output.always-create-directory: {{ fs_output_always_create_directory }}
taskmanager.network.numberOfBuffers: {{ taskmanager_network_numberOfBuffers }}

#==============================================================================
# Web Frontend
#==============================================================================

jobmanager.web.port: {{ jobmanager_web_port }}
jobmanager.web.history: {{ jobmanager_web_history }}
jobmanager.web.checkpoints.disable: {{ jobmanager_web_checkpoints_disable }}
jobmanager.web.checkpoints.history: {{ jobmanager_web_checkpoints_history }}

#==============================================================================
# Master High Availability (required configuration)
#==============================================================================

recovery.mode: {{ recovery_mode }}
recovery.zookeeper.quorum: {{ zookeeper_quorum }}
recovery.zookeeper.path.root: {{ recovery_zookeeper_path_root }}
recovery.zookeeper.storageDir: {{ recovery_zookeeper_storage_dir }}

#==============================================================================
# Kerberos
#==============================================================================

{% if security_enabled %}
krb5.conf.path: {{ krb5_conf_path }}
krb5.jaas.path: {{ flink_client_jass_path }}
{% endif %}